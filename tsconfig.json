{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "declarationDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true
  }
}
